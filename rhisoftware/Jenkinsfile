pipeline {
    agent any

    tools {
        maven 'Maven 3.8.1'
    }

    environment {
        DB_URL = 'jdbc:postgresql://192.168.0.102:5433/employe_db'
        DB_USERNAME = 'springuser'
        DB_PASSWORD = 'springpass'
    }

    stages {
        stage('ğŸ”§ Build') {
            steps {
                dir('rhisoftware') {
                    echo "ğŸ”¨ Compilation du projet"
                    sh 'mvn clean install -DskipTests'
                }
            }
        }

        stage('ğŸ“¦ Update Database with Liquibase') {
            steps {
                dir('rhisoftware') {
                    echo "ğŸ“¡ ExÃ©cution des migrations Liquibase"
                    sh '''
                        mvn liquibase:update \
                            -Dliquibase.changeLogFile=src/main/resources/db.changelogs/db.changelog-master.yaml \
                            -Dliquibase.url=${DB_URL} \
                            -Dliquibase.username=${DB_USERNAME} \
                            -Dliquibase.password=${DB_PASSWORD}
                    '''
                }
            }
        }

        stage('ğŸš€ Run App') {
            steps {
                dir('rhisoftware') {
                    echo "ğŸ§  DÃ©marrage de l'application Spring Boot"
                    sh 'nohup mvn spring-boot:run &'
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… DÃ©ploiement rÃ©ussi !'
        }
        failure {
            echo 'âŒ Une erreur est survenue pendant le pipeline.'
        }
    }
}
