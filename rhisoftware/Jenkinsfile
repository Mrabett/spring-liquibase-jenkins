pipeline {
    agent any

    environment {
        DB_URL = 'jdbc:postgresql://192.168.0.102:5433/employe_db'
        DB_USERNAME = 'springuser'
        DB_PASSWORD = 'springpass'
    }

    stages {

        stage('🔁 Pull Code') {
            steps {
                echo '🧲 Clonage du dépôt depuis GitHub...'
                checkout scm
            }
        }

        stage('🧱 Build Maven') {
            steps {
                echo '🔧 Compilation du projet Spring Boot...'
                sh 'chmod +x rhisoftware/mvnw'
                sh './rhisoftware/mvnw clean install -DskipTests'
            }
        }

        stage('📦 Liquibase Migration') {
            steps {
                echo '📥 Exécution des migrations Liquibase...'
                sh '''
                    chmod +x rhisoftware/mvnw
                    ./rhisoftware/mvnw liquibase:update \
                      -Dliquibase.changeLogFile=rhisoftware/src/main/resources/db.changelogs/db.changelog-master.yaml \
                      -Dliquibase.url=${DB_URL} \
                      -Dliquibase.username=${DB_USERNAME} \
                      -Dliquibase.password=${DB_PASSWORD}
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Déploiement terminé avec succès !'
        }
        failure {
            echo '❌ Une erreur est survenue pendant l’exécution de Liquibase.'
        }
    }
}
