pipeline {
    agent any

    environment {
        DB_URL = 'jdbc:postgresql://192.168.0.102:5433/employe_db'
        DB_USERNAME = 'springuser'
        DB_PASSWORD = 'springpass'
    }

    stages {
        stage('🔁 Pull Code') {
            steps {
                echo '🧲 Clonage du dépôt depuis GitHub...'
                checkout scm
            }
        }

        stage('🧱 Build Maven') {
            steps {
                echo '🔧 Compilation du projet Spring Boot...'
                sh '''
                    cd rhisoftware
                    chmod +x mvnw
                    ./mvnw clean install -DskipTests
                '''
            }
        }

        stage('📦 Liquibase Migration') {
            steps {
                echo '📥 Exécution des migrations Liquibase...'
                sh '''
  chmod +x rhisoftware/mvnw
  ./rhisoftware/mvnw -f rhisoftware/pom.xml liquibase:update \
    -Dliquibase.changeLogFile=classpath:db/changelogs/db.changelog-master.yaml \
    -Dliquibase.url=jdbc:postgresql://192.168.0.102:5433/employe_db \
    -Dliquibase.username=springuser \
    -Dliquibase.password=springpass
'''

            }
        }
    }

    post {
        success {
            echo '✅ Exécution Liquibase terminée avec succès !'
        }
        failure {
            echo '❌ Une erreur est survenue pendant l’exécution de Liquibase.'
        }
    }
}
